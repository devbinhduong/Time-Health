{
  "components/carousel-content": "<div class=\"heroCarousel-content{{#unless show_background}} heroCarousel-content--empty{{/unless}}\">\n    <span class=\"heroCarousel-title animated\">{{heading}}</span>\n\t{{#if subtitle}}\n\t\t<p class=\"heroCarousel-subTitle animated\">{{subtitle}}</p>\n\t{{/if}}\n    <p class=\"heroCarousel-description animated\">{{{text}}}</p>\n    {{#or button_text or btn_2}}\n    <div class=\"button-group\">\n        {{#if button_text}}\n            <a href=\"{{url}}\" aria-label=\"{{#if this.alt_text.length '!=' 0}}{{this.alt_text}}{{else}}{{lang 'carousel.slide_number' slide_number=(add @index 1)}}{{/if}}, {{button_text}}\" class=\"heroCarousel-action animated button{{#unless home_layout_1}} button--tertiary{{/unless}} button--large\">{{button_text}}</a>\n        {{/if}}\n        {{#if btn_2}}\n            <a href=\"{{btn_2_lk}}\" aria-label=\"{{lang 'carousel.slide_number' slide_number=(add @index 1)}}, {{btn_2}}\" class=\"heroCarousel-action animated button{{#unless home_layout_1}} button--tertiary{{/unless}} button--large btn-custom\">{{btn_2}}</a>\n        {{/if}}\n    </div>\n    {{/or}}\n</div>\n"
}
