{
  "components/common/share": "{{#if layout '==' 'product-view'}}\n<div class=\"shareLinkSocial{{#unless product.can_purchase}} product-outOfStock{{/unless}}\">\n  <a class=\"shareLinkSocial__button\" href=\"javascript:void(0)\" aria-label=\"Open Popup Share\">\n    <svg class=\"icon\" aria-hidden=\"true\"><use xlink:href=\"#icon-share-link\"></svg>\n  </a>\n  <div class=\"shareLinkSocial__popup\">\n    <div class=\"shareLinkSocial__link\">\n      <p>{{lang 'products.copy_link'}}</p>\n      <input id=\"shareLinkSocial__copy\" type=\"text\" value=\"{{url}}\">\n      <a href=\"javascript:void(0)\" class=\"shareLinkSocial__close\" aria-label=\"Close Popup Share\">\n        <svg class=\"icon\" aria-hidden=\"true\"><use xlink:href=\"#icon-close\"></svg>\n      </a>\n    </div>\n    {{#if theme_settings.share_custom}}\n      <div class=\"shareLinkSocial__social\">\n        <p>{{lang 'products.share'}}</p>\n        <div class=\"addthis_inline_share_toolbox\"></div>\n        <script type=\"text/javascript\" src=\"//s7.addthis.com/js/300/addthis_widget.js{{theme_settings.share_custom_code}}\"></script>\n      </div>\n    {{else}}\n      {{#if settings.add_this.buttons}}\n          {{assignVar 'encodedUrl' (encodeURI url)}}\n          {{assignVar 'encodedTitle' (encodeURI head.title)}}\n          <div class=\"shareLinkSocial__social\">\n              <ul class=\"socialLinks\">\n                  {{#each settings.add_this.buttons}}\n                      <li class=\"socialLinks-item socialLinks-item--{{service}}\">\n                          {{#if service '===' 'facebook'}}\n                          <a class=\"socialLinks__link icon icon--{{service}}\"\n                             title=\"{{{capitalize service}}}\"\n                             href=\"https://facebook.com/sharer/sharer.php?u={{getVar 'encodedUrl'}}\"\n                             target=\"_blank\"\n                             rel=\"noopener\"\n                             {{{annotation}}}\n                          >\n                              <span class=\"aria-description--hidden\">{{{capitalize service}}}</span>\n                              <svg>\n                                  <use xlink:href=\"#icon-facebook\"/>\n                              </svg>\n                          </a>\n                          {{else if service '===' 'email'}}\n                          <a class=\"socialLinks__link icon icon--{{service}}\"\n                             title=\"{{{capitalize service}}}\"\n                             href=\"mailto:?subject={{getVar 'encodedTitle'}}&amp;body={{getVar 'encodedUrl'}}\"\n                             target=\"_self\"\n                             rel=\"noopener\"\n                             {{{annotation}}}\n                          >\n                              <span class=\"aria-description--hidden\">{{{capitalize service}}}</span>\n                              <svg>\n                                  <use xlink:href=\"#icon-envelope\"/>\n                              </svg>\n                          </a>\n                          {{else if service '===' 'print'}}\n                          <a class=\"socialLinks__link icon icon--{{service}}\"\n                             title=\"{{{capitalize service}}}\"\n                             onclick=\"window.print();return false;\"\n                             {{{annotation}}}\n                          >\n                              <span class=\"aria-description--hidden\">{{{capitalize service}}}</span>\n                              <svg>\n                                  <use xlink:href=\"#icon-print\"/>\n                              </svg>\n                          </a>\n                          {{else if service '===' 'twitter'}}\n                          <a class=\"socialLinks__link icon icon--{{service}}\"\n                             href=\"https://twitter.com/intent/tweet/?text={{getVar 'encodedTitle'}}&amp;url={{getVar 'encodedUrl'}}\"\n                             target=\"_blank\"\n                             rel=\"noopener\"\n                             title=\"{{{capitalize service}}}\"\n                             {{{annotation}}}\n                          >\n                              <span class=\"aria-description--hidden\">{{{capitalize service}}}</span>\n                              <svg>\n                                  <use xlink:href=\"#icon-twitter\"/>\n                              </svg>\n                          </a>\n                          {{else if service '===' 'linkedin'}}\n                          <a class=\"socialLinks__link icon icon--{{service}}\"\n                             title=\"{{{capitalize service}}}\"\n                             href=\"https://www.linkedin.com/shareArticle?mini=true&amp;url={{getVar 'encodedUrl'}}&amp;title={{getVar 'encodedTitle'}}&amp;summary={{getVar 'encodedTitle'}}&amp;source={{getVar 'encodedUrl'}}\"\n                             target=\"_blank\"\n                             rel=\"noopener\"\n                             {{{annotation}}}\n                          >\n                              <span class=\"aria-description--hidden\">{{{capitalize service}}}</span>\n                              <svg>\n                                  <use xlink:href=\"#icon-linkedin\"/>\n                              </svg>\n                          </a>\n                          {{else if service '===' 'pinterest'}}\n                          <a class=\"socialLinks__link icon icon--{{service}}\"\n                             title=\"{{{capitalize service}}}\"\n                             href=\"https://pinterest.com/pin/create/button/?url={{getVar 'encodedUrl'}}&amp;description={{getVar 'encodedTitle'}}\"\n                             target=\"_blank\"\n                             rel=\"noopener\"\n                             {{{annotation}}}\n                          >\n                              <span class=\"aria-description--hidden\">{{{capitalize service}}}</span>\n                              <svg>\n                                  <use xlink:href=\"#icon-pinterest\"/>\n                              </svg>\n                          </a>\n                          {{/if}}\n                      </li>\n                  {{/each}}\n              </ul>\n          </div>\n      {{/if}}\n      {{#if settings.facebook_like_button.enabled}}\n          <iframe\n              class=\"facebook{{#if settings.facebook_like_button.verb '===' 'recommend'}}Recommend{{else}}Like{{/if}}Btn\"\n              style=\"border:none; overflow:hidden; margin: 0; padding: 0; position:absolute\"\n              src=\"https://www.facebook.com/plugins/like.php?href={{settings.facebook_like_button.href}}&amp;layout=button_count{{#if settings.facebook_like_button.verb '===' 'recommend'}}&amp;action=recommend{{/if}}&amp;colorscheme=light&amp;height=20\"\n              scrolling=\"no\"\n              frameborder=\"0\"\n              allowTransparency=\"true\">\n          </iframe>\n      {{/if}}\n    {{/if}}\n  </div>\n</div>\n{{else}}\n  {{#if theme_settings.share_custom}}\n    <div class=\"shareLinkSocial__social\">\n      <p>{{lang 'products.share'}}</p>\n      <div class=\"addthis_inline_share_toolbox\"></div>\n      <script type=\"text/javascript\" src=\"//s7.addthis.com/js/300/addthis_widget.js{{theme_settings.share_custom_code}}\"></script>\n    </div>\n  {{else}}\n    {{#if settings.add_this.buttons}}\n        {{assignVar 'encodedUrl' (encodeURI url)}}\n        {{assignVar 'encodedTitle' (encodeURI head.title)}}\n        <div>\n            <ul class=\"socialLinks\">\n                {{#each settings.add_this.buttons}}\n                    <li class=\"socialLinks-item socialLinks-item--{{service}}\">\n                        {{#if service '===' 'facebook'}}\n                        <a class=\"socialLinks__link icon icon--{{service}}\"\n                           title=\"{{{capitalize service}}}\"\n                           href=\"https://facebook.com/sharer/sharer.php?u={{getVar 'encodedUrl'}}\"\n                           target=\"_blank\"\n                           rel=\"noopener\"\n                           {{{annotation}}}\n                        >\n                            <span class=\"aria-description--hidden\">{{{capitalize service}}}</span>\n                            <svg>\n                                <use xlink:href=\"#icon-facebook\"/>\n                            </svg>\n                        </a>\n                        {{else if service '===' 'email'}}\n                        <a class=\"socialLinks__link icon icon--{{service}}\"\n                           title=\"{{{capitalize service}}}\"\n                           href=\"mailto:?subject={{getVar 'encodedTitle'}}&amp;body={{getVar 'encodedUrl'}}\"\n                           target=\"_self\"\n                           rel=\"noopener\"\n                           {{{annotation}}}\n                        >\n                            <span class=\"aria-description--hidden\">{{{capitalize service}}}</span>\n                            <svg>\n                                <use xlink:href=\"#icon-envelope\"/>\n                            </svg>\n                        </a>\n                        {{else if service '===' 'print'}}\n                        <a class=\"socialLinks__link icon icon--{{service}}\"\n                           title=\"{{{capitalize service}}}\"\n                           onclick=\"window.print();return false;\"\n                           {{{annotation}}}\n                        >\n                            <span class=\"aria-description--hidden\">{{{capitalize service}}}</span>\n                            <svg>\n                                <use xlink:href=\"#icon-print\"/>\n                            </svg>\n                        </a>\n                        {{else if service '===' 'twitter'}}\n                        <a class=\"socialLinks__link icon icon--{{service}}\"\n                           href=\"https://twitter.com/intent/tweet/?text={{getVar 'encodedTitle'}}&amp;url={{getVar 'encodedUrl'}}\"\n                           target=\"_blank\"\n                           rel=\"noopener\"\n                           title=\"{{{capitalize service}}}\"\n                           {{{annotation}}}\n                        >\n                            <span class=\"aria-description--hidden\">{{{capitalize service}}}</span>\n                            <svg>\n                                <use xlink:href=\"#icon-twitter\"/>\n                            </svg>\n                        </a>\n                        {{else if service '===' 'linkedin'}}\n                        <a class=\"socialLinks__link icon icon--{{service}}\"\n                           title=\"{{{capitalize service}}}\"\n                           href=\"https://www.linkedin.com/shareArticle?mini=true&amp;url={{getVar 'encodedUrl'}}&amp;title={{getVar 'encodedTitle'}}&amp;summary={{getVar 'encodedTitle'}}&amp;source={{getVar 'encodedUrl'}}\"\n                           target=\"_blank\"\n                           rel=\"noopener\"\n                           {{{annotation}}}\n                        >\n                            <span class=\"aria-description--hidden\">{{{capitalize service}}}</span>\n                            <svg>\n                                <use xlink:href=\"#icon-linkedin\"/>\n                            </svg>\n                        </a>\n                        {{else if service '===' 'pinterest'}}\n                        <a class=\"socialLinks__link icon icon--{{service}}\"\n                           title=\"{{{capitalize service}}}\"\n                           href=\"https://pinterest.com/pin/create/button/?url={{getVar 'encodedUrl'}}&amp;description={{getVar 'encodedTitle'}}\"\n                           target=\"_blank\"\n                           rel=\"noopener\"\n                           {{{annotation}}}\n                        >\n                            <span class=\"aria-description--hidden\">{{{capitalize service}}}</span>\n                            <svg>\n                                <use xlink:href=\"#icon-pinterest\"/>\n                            </svg>\n                        </a>\n                        {{/if}}\n                    </li>\n                {{/each}}\n            </ul>\n        </div>\n    {{/if}}\n    {{#if settings.facebook_like_button.enabled}}\n        <iframe\n            class=\"facebook{{#if settings.facebook_like_button.verb '===' 'recommend'}}Recommend{{else}}Like{{/if}}Btn\"\n            style=\"border:none; overflow:hidden; margin: 0; padding: 0; position:absolute\"\n            src=\"https://www.facebook.com/plugins/like.php?href={{settings.facebook_like_button.href}}&amp;layout=button_count{{#if settings.facebook_like_button.verb '===' 'recommend'}}&amp;action=recommend{{/if}}&amp;colorscheme=light&amp;height=20\"\n            scrolling=\"no\"\n            frameborder=\"0\"\n            allowTransparency=\"true\">\n        </iframe>\n    {{/if}}\n  {{/if}}\n{{/if}}\n"
