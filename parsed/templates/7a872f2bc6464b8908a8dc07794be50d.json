{
  "components/halothemes/home/home-newsletter": "{{#if theme_settings.enable_newsletter}}\n      <div id=\"halo-newsletter\" class=\"d-inline-block w-100\">\n          <div class=\"newsletter-popup-container{{#unless theme_settings.newsletter_image}} no-imageNewsletter{{/unless}}\">\n              <div class=\"newsletter-inner\">\n                {{#if theme_settings.newsletter_image}}\n                    <div class=\"newsletter-left\">\n                      <img class=\"lazyload zoomFadeSmall\" src=\"https://cdn11.bigcommerce.com/s-{{settings.store_hash}}/product_images/uploaded_images/{{theme_settings.newsletter_image}}\" alt=\"{{theme_settings.newsletter_heading}}\">\n                    </div>\n                  {{/if}}\n                  <div class=\"newsletter-right{{#unless theme_settings.newsletter_image}} noImg{{/unless}}\">\n                    <div class=\"newsletter-right-inner\">\n                      {{#if theme_settings.newsletter_subheading '!=' ''}}\n                        <span class=\"newsletter-subheading txt-trans-up appearUp\">{{theme_settings.newsletter_subheading}}</span>\n                      {{/if}}\n                      {{#if theme_settings.newsletter_heading '!=' ''}}\n                          <h2 class=\"newsletter-heading txt-trans-up appearUp\">{{theme_settings.newsletter_heading}}</h2>\n                      {{/if}}\n                      <div id=\"SubcribeForm\" class=\"appearUp\">\n                          <form class=\"form\" action=\"{{urls.subscribe.action}}\" method=\"post\" id=\"SubcribeFormSubmit\">\n                              <fieldset class=\"form-fieldset\">\n                                  <input type=\"hidden\" name=\"action\" value=\"subscribe\">\n                                  <input type=\"hidden\" name=\"nl_first_name\" value=\"bc\">\n                                  <input type=\"hidden\" name=\"check\" value=\"1\">\n                                  <div class=\"form-field\">\n                                      <label class=\"form-label is-srOnly\" for=\"nl_email4\">Email:</label>\n                                      <input class=\"form-input\" id=\"nl_email4\" name=\"nl_email\" type=\"email\" placeholder=\"{{lang 'newsletter.email_placeholder_2'}}\">\n                                      <button class=\"button{{#if theme_settings.halo_homepage_layout_4}} button--default{{else}} button--tertiary{{/if}}\" type=\"submit\" arial-label=\"{{lang 'newsletter.subscribe_submit_2'}}\">></button>\n                                  </div>\n                              </fieldset>\n                          </form>\n                      </div>\n                      <p class=\"newsletter-text appearUp\">{{theme_settings.newsletter_txt_1}} <a href=\"{{theme_settings.newsletter_link}}\" title=\"{{theme_settings.newsletter_txt_2}}\">{{theme_settings.newsletter_txt_2}}</a>.</p>\n                    </div>\n                  </div>\n              </div>\n          </div>\n      </div>\n  {{/if}}"
