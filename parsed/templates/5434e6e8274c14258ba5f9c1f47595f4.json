{
  "components/halothemes/header/halo-header-mobile": "<div class=\"haloHeaderMobile\">\n\t<div class=\"haloHeaderMobile__item haloHeaderMobile__item--left\">\n\t\t<a href=\"#\" class=\"mobileMenu-toggle\" data-mobile-menu-toggle=\"menu\">\n\t        <span class=\"mobileMenu-toggleIcon\">Toggle menu</span>\n\t    </a>\n\t    <button class=\"navUser-action navUser-action--quickSearch quick-search-expand\"\n           type=\"button\"\n           id=\"quick-search-expand-mobile\"\n           data-search=\"quickSearch\"\n           aria-controls=\"quickSearch\"\n           aria-label=\"{{lang 'common.search'}}\"\n        >   \n            <svg aria-hidden=\"true\"><use xlink:href=\"#icon-search\"></use></svg>\n            <span>{{lang 'common.search'}}</span>\n        </button>\n\t</div>\n\t<div class=\"haloHeaderMobile__item haloHeaderMobile__item--center\">\n\t\t{{#if page_type '===' 'default'}}\n            <h2 class=\"header-logo header-logo--{{theme_settings.logo-position}}\">\n                {{> components/common/store-logo}}\n            </h2>\n        {{else}}\n            <div class=\"header-logo header-logo--{{theme_settings.logo-position}}\">\n                {{> components/common/store-logo}}\n            </div>\n        {{/if}}\n\t</div>\n\t<div class=\"haloHeaderMobile__item haloHeaderMobile__item--right\">\n\t\t{{#if customer}}\n            <a class=\"navUser-action navUserAction-login\"\n               href=\"{{urls.account.index}}\"\n               aria-label=\"{{lang 'common.account'}}\"\n            >\n                <svg aria-hidden=\"true\"><use xlink:href=\"#icon-user\"></use></svg>\n            </a>\n        {{else}}\n            <a class=\"navUser-action navUserAction-login\"\n               href=\"{{urls.auth.login}}\"\n               aria-label=\"{{lang 'common.login'}}\"\n            >\n                <svg aria-hidden=\"true\"><use xlink:href=\"#icon-user\"></use></svg>\n            </a>\n        {{/if}}\n\t\t<a class=\"navUser-action navUser-actionCart\"\n           data-cart-preview\n           data-options=\"align:right\"\n           href=\"{{urls.cart}}\"\n           aria-label=\"{{lang 'cart.nav_aria_label'}}\"\n        > \n          {{#if theme_settings.halo_homepage_layout_4 }}\n                <svg aria-hidden=\"true\"><use xlink:href=\"#icon-cart-2\"></use></svg>\n            {{ else }}\n                <svg aria-hidden=\"true\"><use xlink:href=\"#icon-cart\"></use></svg>\n            {{/if}}\n            <span class=\"countPill cart-quantity\"></span>\n        </a>\n\t</div>\n</div>\n",
  "components/common/store-logo": "<a href=\"{{urls.home}}\" class=\"header-logo__link\">\n    {{#if settings.store_logo.image}}\n        {{#if theme_settings.logo_size '===' 'original'}}\n            <img class=\"header-logo-image-unknown-size\" src=\"{{getImage settings.store_logo.image 'logo_size'}}\" alt=\"{{settings.store_logo.title}}\" title=\"{{settings.store_logo.title}}\">\n        {{else}}\n            <div class=\"header-logo-image-container\">\n                <img class=\"header-logo-image\" src=\"{{getImage settings.store_logo.image 'logo_size'}}\" alt=\"{{settings.store_logo.title}}\" title=\"{{settings.store_logo.title}}\">\n            </div>\n        {{/if}}\n    {{else}}\n        <span class=\"header-logo-text\">{{settings.store_logo.title}}</span>\n    {{/if}}\n</a>\n"
}
